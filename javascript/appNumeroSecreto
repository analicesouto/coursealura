<!DOCTYPE html>
<html lang="en">

<body>
    <script>
        alert(`Bem vindo ao jogo`);

        let numeroSecreto = parseInt(Math.random() * 100 + 1); // vai de 0 a 99 + 1 que foi adicionado ao lado
        console.log(numeroSecreto)
        let chute;
        let tentativas = 1;

        while (chute != numeroSecreto) {
            chute = prompt('Escolha um número de 1 a 100');
            if (chute == numeroSecreto) {
                break;
            } else {
                if (chute > numeroSecreto) {
                    alert(`opa, o número é menor do que ${chute}`);
                } else {
                    alert(`opa, o número é maior do que ${chute}`);
                }

                tentativas++;

            }
        }

        let palavraTentativa = tentativas > 1 ? 'tentativas' : 'tentativa';
        alert(`Parabéns você acertou o número secreto ${numeroSecreto}, com ${tentativas} ${palavraTentativa}.`);

    </script>
</body>

</html>
